{
  "manifest_version": 3,
  "name": "Ollama 10% Immersion",
  "version": "1.1",
  "description": "Translates 10% of the page content using a local Ollama model.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tts"
  ],
  "host_permissions": [
    "http://localhost:11434/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}